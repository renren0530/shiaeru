<%= render "shared/header" %>

<h1 class="inquiry">お問い合わせ</h1>

<div class="inquiry-forms">

<%= form_for(@inquiry, url: confirm_path) do |f| %>

  <div class="form-group">
    <p class="contents"><%= f.label :name, 'お名前' %></p>
    <p class="content"><%= f.text_field :name, autofocus: true, class: 'form-control' %></p>
  </div>

    <div class="form-group">
    <p class="contents"><%= f.label :phone_number, ' 電話番号' %></p>
    <p class="content" ><%= f.text_field :phone_number, autofocus: true, class: 'form-control' %></p>
  </div>

   <div class="form-group">
    <p class="contents"><%= f.label :email, ' メールアドレス' %></p>
    <p class="content" ><%= f.text_field :email, autofocus: true, class: 'form-control' %></p>
  </div>

    <div class="form-group">
    <p class="contents"><%= f.label :message, 'お問い合わせ内容' %></p>
    <p class="content" ><%= f.text_area :message,  class: 'form-control', rows:"10", cols:"35" %></p>
  </div>

  <div class="form-group">
    <%= f.submit '入力内容確認' %>
  </div>

<% end %>

</div>
<%= render "shared/footer" %>
