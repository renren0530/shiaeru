<%= render "shared/header" %>
<div class="brand-content">
<div class="brand-image"><%= image_tag @brand.image, width:"500", class:"brand-img" %></div>
<div class="brand-text", style="white-space:pre-wrap;"><%= @brand.brand_info %></div>
</div>

<% if @brand.brand_name != "募集中" %>
<h2 class="brand-detail"><%= "商品一覧" %></h2>
<% end %>
<div class="brand-return">
<% @returns.each do |returns| %>
<% if returns.brand_kinds_id == @brand.id  %>

<%
=begin  
%>
<%= link_to item_path(returns.item_id), class: 'brand-returns-btn' do  %>
<%
=end
%>

<%= link_to item_return_id_path(returns.item_id,returns.id), class: 'brand-returns-btn' do  %>
<p class="returns-name"><%= returns.return_name %></p>
<%= image_tag returns.images[0], class: "returns-image" %> 
<p class="item-price">¥<%= number_to_currency(returns.return_price.to_s, locale:"jp") %></p>

<%
=begin  
%>
<p class="donate">(自然保護団体への寄付額：<%= number_to_currency(returns.return_donate.to_s, locale:"jp") %>)</p>
<%
=end 
%>

<p class="returns-text">支援する</p>
<% end %>
<% end %>
<% end %>
</div>
 

<%= render "shared/footer" %>




