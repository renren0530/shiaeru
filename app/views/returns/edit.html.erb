<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('items/yoko_color.png' , size: '200x80'), "/" %>
  </header>

 <div class="items-sell-main">
    <h2 class="items-sell-title">商品の情報を入力</h2>
    <%= form_with model: @return, url:item_return_path, method: :put, local: true do |f| %>
 
    <%# 商品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        商品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p> クリックしてファイルをアップロード</p>
        <%= f.file_field :images, name:"return[images][]", multiple: true, id:"item-image" %>
      </div>
    </div>
    <div id="image-list">
  </div>
    <% if @return.images.present? %>
    <p>現在登録されている画像（削除するものはチェックしてください）</p>
    <% @return.images.each do |image| %>
      <%= f.check_box :image_ids, {multiple: true}, image.id, false %>
      <%= image_tag image, size:"100" %> <br>
    <% end %>
  <% end %>
    <%# /商品画像 %>

    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        商品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :return_name, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          商品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :return_info, class:"items-text", id:"item-info", placeholder:"" ,cols:"60", rows:"10" ,maxlength:"1000" %>
      </div>
    </div>
    <%# 商品名と商品説明 %>

    <%# 販売価格 %>
      <div class="sell-price">
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :return_price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
      </div>
    </div>
    <%# 販売価格 %>

     <%# 寄付価格 %>
      <div class="sell-price">
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>寄付価格</span>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :return_donate, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
      </div>
    </div>
    <%# 寄付価格 %>

      <%# ブランド %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ブランド</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:brand_kinds_id, BrandKinds.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
       <%# ブランド %>

     <div class="sell-btn-contents">
      <%= f.submit "登録する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>

    <% end %>
  </div>
</div>