   </div>

   <div class="activities">
    <%= link_to(root_path, class: 'shiaeru-btn') do  %>
    <span class="shiaeru-text">詳しくはこちら</span>
    <% end %>
   </div>
</div>
<%
=end
%>

<div class="project-title">
<h3 class="project-list">プロジェクト一覧</h3>
</div>

<div class="main">
 <%= render partial: "item", collection: @items %>
</div>
<% if user_signed_in? && (current_user.email == "earth_r@i.softbank.jp") %>
<%= link_to(new_item_path, class: 'purchase-btns') do  %>
  <span class='purchase-btn-texts'>プロジェクト登録</span>
<% end %> 
<% end %>

<div class="project-title">
<h3 class="project-list">ブランド一覧</h3>
</div>

<div class="main">
 <%= render partial: "brands/brand", collection: @brands %>
</div>



<% if user_signed_in? && (current_user.email == "earth_r@i.softbank.jp") %>
<%= link_to(new_brand_path, class: 'purchase-btns') do  %>
  <span class='purchase-btn-texts'>ブランド登録</span>
<% end %> 
<% end %>

