<%= render "shared/header" %>

<h1 class="new-registration">新規登録</h1>


<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<div class="registrations-form">
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :"お名前" %><br />
    <%= f.text_field :nickname, autofocus: true, placeholder:"例) しあえる"%>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>
 <% else %>
  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード確認" %><br />
    <%= f.password_field :password_confirmation, placeholder:"6文字以上の半角英数字" %>
  </div>
   <% end %>

   <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

<% end %>

<%
=begin
%>
<span class="sns"><%= link_to "Facebookで登録", user_facebook_omniauth_authorize_path, method: :post, class:"sns-registration" %></span>
<span class="sns"><%= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, method: :post, class:"sns-registration" %></span>
<%
=end
%>
<span><%= link_to 'トップページへ戻る', "/", class:"top-page-btn" %></span>

</div>

<%= render "shared/footer" %>


