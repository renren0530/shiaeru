<%= render "shared/header" %>

<h1 class="login">ログイン</h1>

 

<%= form_with model: @user, url: user_session_path, local: true do |f| %>

<div class="login-form">

<div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>  


  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  
<% end %>


<span class="sns"><%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, class:"sns-registration"%></span>
<span class="sns"><%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class:"sns-registration" %></span>
<span class="password-forget"><%= render "devise/shared/links"%></span>
<span><%= link_to 'トップページへ戻る', "/", class:"top-page-btn" %></span>

</div>

<%= render "shared/footer" %>
